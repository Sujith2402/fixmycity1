rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user data from 'users' collection
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }
    
    // Helper function to check if user is the reporter of an issue
    function isReporter(issueData) {
      return isAuthenticated() && request.auth.uid == issueData.reportedBy;
    }

    // Rules for 'users' collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Rules for 'issues' collection
    match /issues/{issueId} {
      // Admins can read all issues. Citizens can read issues they reported.
      // Optionally, allow citizens to read all issues for transparency.
      allow read: if isAuthenticated(); 
      
      // Only authenticated users can create issues.
      allow create: if isAuthenticated();
      
      // Admins can update any issue. 
      // Citizens can only update (e.g., upvote) certain fields, 
      // but status/notes updates are restricted to Admins.
      allow update: if isAdmin() || (isAuthenticated() && isReporter(resource.data));
      
      // Only Admins can delete issues.
      allow delete: if isAdmin();
    }
  }
}
